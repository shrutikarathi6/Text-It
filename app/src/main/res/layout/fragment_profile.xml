<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Profile">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/splash">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:layout_margin="20dp"
            android:padding="20dp"
            app:tint="@color/white"
            android:src="@drawable/baseline_arrow_back_24"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/person"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profileAvatar"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/circle"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Jhon Abraham"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:text="\@jhonabraham"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textViewUsername"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayoutButtons"
            >
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/message"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/stylized_circle"/>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/videos"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/stylized_circle"/>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/call"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/stylized_circle"/>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/more"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/stylized_circle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayoutButtons"
            android:layout_marginTop="25dp"
            android:background="@drawable/card"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp"
            android:orientation="vertical">
            <View
                android:id="@+id/view"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#ffe6e6e6"/>
            <TextView
                android:id="@+id/textViewNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="25dp"
                android:text="Display Name"
                android:textColor="#797c7b"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textViewNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Jhon Abraham"
                android:textColor="#000e08"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/textViewEmailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="25dp"
                android:text="Email Address"
                android:textColor="#797c7b"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textViewEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="jhonabraham20@gmail.com"
                android:textColor="#000e08"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/textViewAddressHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="25dp"
                android:text="Address"
                android:textColor="#797c7b"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textViewAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="33 street west subidbazar,sylhet"
                android:textColor="#000e08"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/textViewPhoneHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="25dp"
                android:text="Phone Number"
                android:textColor="#797c7b"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textViewPhoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="(320) 555-0104"
                android:textColor="#000e08"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/textViewMediaHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="25dp"
                android:text="Media Shared"
                android:textColor="#797c7b"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:src="@drawable/person"
                    android:layout_marginHorizontal="10dp"
                    app:shapeAppearance="@style/squircle"
                    android:scaleType="centerCrop"  />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/person"
                    app:shapeAppearance="@style/squircle"
                    android:scaleType="centerCrop"  />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:src="@drawable/person"
                        app:shapeAppearance="@style/squircle"
                        android:scaleType="centerCrop"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_atop"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#80000000"
                        app:shapeAppearance="@style/squircle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="255+"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>