<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash"
    tools:context=".fragment.UserProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splash">

            <ImageButton
                android:id="@+id/BackButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/transparent"
                android:padding="20dp"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="280dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Profile"
                        android:textColor="@color/white"

                        android:textSize="22sp"
                        app:layout_constraintBottom_toTopOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="36dp"
                        app:layout_constraintBottom_toTopOf="@+id/editTextText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:srcCompat="@drawable/img_4" />

                    <TextView
                        android:id="@+id/editTextText"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:text="Jhon Abraham"
                        android:textColor="#E9E3E3"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:layout_constraintWidth_percent="0.8" />

                    <TextView
                        android:id="@+id/editTextText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:text="jhonabraham"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTextText"
                        app:layout_constraintWidth_percent="0.8" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/msgButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/stylized_circle"
                    android:padding="20dp"
                    android:src="@drawable/img_6"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/vdeocallButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/stylized_circle"
                    android:padding="20dp"
                    android:src="@drawable/img_7"
                    app:tint="@color/white" />
                <ImageButton
                    android:id="@+id/callButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/stylized_circle"
                    android:padding="20dp"
                    android:src="@drawable/img_8"
                    app:tint="@color/white" />
                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/stylized_circle"
                    android:padding="20dp"
                    android:src="@drawable/img_9"
                    app:tint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="840dp"
                android:layout_below="@id/linearLayoutHeading"
                android:layout_marginTop="10dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="#ffe6e6e6" />

                <TextView
                    android:id="@+id/textViewNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="Display Name"
                    android:textColor="#797C7B"
                    android:textFontWeight="800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNameHeader1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins"
                    android:text="Display Name"
                    android:textColor="#000e08"
                    android:textFontWeight="800"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewNameHeader2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="Email Address"
                    android:textColor="#797C7B"
                    android:textFontWeight="800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNameHeader3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins"
                    android:text="jhonabraham20@gmail.com"
                    android:textColor="#000e08"
                    android:textFontWeight="800"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewNameHeader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="Address"
                    android:textColor="#797C7B"
                    android:textFontWeight="800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNameHeader5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins"
                    android:text="33 street west subidbazar,sylhet"
                    android:textColor="#000e08"
                    android:textFontWeight="800"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewNameHeader6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="Phone  Number"
                    android:textColor="#797C7B"
                    android:textFontWeight="800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNameHeader7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins"
                    android:text="(320) 555-0104"
                    android:textColor="#000e08"
                    android:textFontWeight="800"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewNameHeader8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/poppins"
                        android:text="Media Shared"
                        android:padding="10dp"
                        android:textColor="#797C7B"
                        android:textFontWeight="800"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewNameHeader9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"

                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/poppins"
                        android:text="View all"
                        android:textColor="#20A090"
                        android:textFontWeight="800"
                        android:textAlignment="viewEnd"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewViewAll1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/img_1"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="8dp" /> <!-- Add margin to create space -->

                    <ImageView
                        android:id="@+id/imageViewViewAll2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/img_2"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/imageViewViewAll3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/img_3"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>